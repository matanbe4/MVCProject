@model HW.ModelView.EmployeeViewModel
@using HW.Models;
@{
    ViewBag.Title = "AddEmp";
}


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<br />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
<h2>Add New Employee</h2>


@using (Html.BeginForm("EditEmp", "Manager", FormMethod.Post,Model))
{
    <!--
    <form action="Submit" method="post">
            -->
    <div class="form-group input-group text-danger">
        <span class="input-group-addon" id="fn1">
            <i class="fas fa-address-card"></i>
        </span>
        @Html.TextBoxFor(m => m.emp.FirstName, new { @class = "form-control", value = "@Model.emp.FirstName", placeholder = "Employee first name", aria_describedby = "fn1" })
        @Html.ValidationMessageFor(x => x.emp.FirstName)
    </div>
    <div class="form-group input-group text-danger">
        <span class="input-group-addon" id="ln1">
            <i class="fas fa-address-card"></i>
        </span>
        @Html.TextBoxFor(m => m.emp.LastName, new { @class = "form-control", value = "@Model.emp.LastName", placeholder = "Employee last name", aria_describedby = "ln1" })
        @Html.ValidationMessageFor(x => x.emp.LastName)
    </div>
    <br />
    <br />
    <h3>Create his user  </h3>
    <div class="form-group input-group text-danger">
        <span class="input-group-addon" id="fn1">
            <i class="fas fa-address-card"></i>
        </span>
        @Html.TextBoxFor(m => m.usr.UserName, new { @class = "form-control", value = "@Model.usr.UserName", placeholder = "Employee user name", aria_describedby = "fn1" })
        @Html.ValidationMessageFor(x => x.usr.UserName)
    </div>
    <div class="form-group input-group text-danger">
        <span class="input-group-addon" id="ln1">
            <i class="fas fa-address-card"></i>
        </span>
        @Html.PasswordFor(m => m.usr.Password, new { @class = "form-control", value = "@Model.usr.Password", placeholder = "Password", aria_describedby = "ln1" })
        @Html.ValidationMessageFor(x => x.usr.Password)
    </div>


    <br />
    <div class="form-group">
        <input id="Submit1" type="submit" value="Add Employee" class="btn btn-primary" />
    </div>
}

@* Showing existing Customers *@




<div>
    Existing employees
</div>
<div id="status">

</div>
<table class="table" id="empTable">
    <tr>
        <td>First Name</td>
        <td>Last Name</td>
    </tr>
    @foreach (Employee emp in Model.emps)
    {
        <tr>
            <td>@emp.FirstName</td>
            <td>@emp.LastName</td>
        </tr>
    }
</table>
